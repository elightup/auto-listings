{
    "private": true,
    "scripts": {
        "css:admin": "node-sass assets/admin/admin.scss --sourcemap none --output-style compressed -o assets/admin",
        "css:frontend": "node-sass assets/frontend/frontend.scss --sourcemap none --output-style compressed -o assets/frontend",
        "watch:admin": "node-sass assets/admin/admin.scss --sourcemap true --output-style compressed -w sass -r -o assets/admin",
        "watch:search-frontend": "node-sass assets/css/frontend.scss --sourcemap true --output-style compressed -w sass -r -o assets/css",
        "watch:css": "node-sass --sourcemap none --output-style compressed -w sass/style.scss -r -o assets/css",
        "watch:js": "webpack --watch --mode development",
        "start": "webpack --mode development",
        "build": "webpack --mode production"
    },
    "devDependencies": {
        "@babel/core": "^7.8.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-react-jsx": "^7.8.3",
        "babel-loader": "^8.0.6",
        "node-sass": "^4.13.1",
        "webpack": "^4.41.6",
        "webpack-cli": "^3.3.11"
    }
}
