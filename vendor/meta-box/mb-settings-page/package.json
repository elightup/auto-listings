{
  "scripts": {
    "css": "node-sass assets/settings.scss --output-style=expanded --indent-type=tab --indent-width=1 -o assets",
    "postcss": "postcss assets/settings.css --no-map -u autoprefixer -o assets/settings.css --autoprefixer.browsers=\"> 0.2%\"",
    "watch": "node-sass --output-style expanded --indent-type tab --indent-width 1 -w assets -r -o assets"
  },
  "dependencies": {
    "autoprefixer": "^10.2.6",
    "node-sass": "^6.0.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1"
  }
}
